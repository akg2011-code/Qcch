
@{ Layout = null;}
@model QccHub.DTOS.LoginVM

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
          rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/vendor/aos/aos.css" rel="stylesheet">
    <!-- <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" rel="stylesheet"> -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/responsiv.css" rel="stylesheet" />
    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">

</head>

<body>
    <div class="identity">
        <div class="container-fluid">
            <div class="row">
                <div class="form-login-reg">
                    <div class="headerOfForm">
                        <h3>Welcome</h3>
                        <p>Sign in to continue to QCCH</p>
                        <img src="~/img/logo-login.png">
                    </div>
                    <div class="bodyOfForm">
                        <form action="@Url.Content("~/Account/login")" method="post" role="form">
                            @Html.AntiForgeryToken()

                            <input hidden name="returnUrl" value="@ViewData["ReturnUrl"]" />

                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" asp-for="Email" required class="form-control" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input asp-for="Password" id="Password" type="password" required class="form-control" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group form-check">
                                <input type="checkbox" onclick="myFunction()" name="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Show Password</label>
                            </div>

                            <div class="text-danger">
                                @Html.ValidationSummary()
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-danger col-md-9">Login</button>
                            </div>

                        </form>
                    </div>
                    <div class="footerOfForm">
                        <p>or login with</p>
                        <div class="social-icons">
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    <a href="" style="color: blue;">
                                        <i class="fab fa-facebook-square"></i>
                                    </a>
                                </div>
                                <div class="col-md-4 text-center">
                                    <a href="" style="color: red;">
                                        <i class="fab fa-google-plus-square"></i>
                                    </a>
                                </div>
                                <div class="col-md-4 text-center">
                                    <a href="" style="color: royalblue;">
                                        <i class="fab fa-linkedin"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-top: 10px;">
                            <div class="col-md-6">
                                <small> <a href="">forget password?</a></small>
                            </div>
                            <div class="col-md-6">
                                <small>New to QCCH? <a href="@Url.Content("~/account/register")"> Join Now</a></small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vendor JS Files -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/vendor/php-email-form/validate.js"></script>
    <script src="~/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/vendor/counterup/counterup.min.js"></script>
    <script src="~/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/vendor/venobox/venobox.min.js"></script>
    <script src="~/vendor/aos/aos.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/js/all.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>

    <script>
        function myFunction() {
            var x = document.getElementById("Password");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>


</body>

</html>