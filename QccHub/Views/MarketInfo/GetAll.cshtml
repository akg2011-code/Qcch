@model IEnumerable<MarketInfo>
@{
    ViewBag.Title = "Market Info";
}
<main id="main">
    <div class="JobContent">
        <section class="container">
            <div class="row">
                <!-- left side -->
                <!-- center side -->
                <div class="col-md-12">
                    <div class="center all">
                        <!-- education-sction -->
                        <div class="Education details-Edu-Expe-Certi text-center">
                            <h1 style="color: red;">Advertise on QCCH to get more work</h1>
                            <h5>People come to QCCH to be inspired discover things they care about</h5>
                        </div>

                        <div class="Education details-Edu-Expe-Certi">
                            <div class="univeristy">
                                <!-- job one -->
                                <div class="uniDeails">
                                    @foreach (var item in Model)
                                    {
                                        <div class="row">
                                            <div class="col-md-5">
                                                <img src="@Url.Content("~/MarketInfoImages")/@item.Image" style="height: 310px; width: 100%;">
                                            </div>
                                            <div class="col-md-7">
                                                <h3><i class="fas fa-ad"></i>  @item.Title</h3>
                                                <small><i class="far fa-clock"></i> @item.CreatedDate</small>
                                                <div class="row">
                                                    <div class="mini-text-all">
                                                        @Html.Raw(item.Details)
                                                    </div>
                                                </div>
                                                <div class="text-right">
                                                    <a asp-action="GetMarketInfoDetails" asp-route-id="@item.ID" type="button" class="btn btn-warning">Get In Touch</a>
                                                </div>
                                            </div>
                                        </div>
                                        <hr>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

</main>
